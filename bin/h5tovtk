#!/usr/bin/env python

from oscar import oscar
import argparse

def main():
    parser = argparse.ArgumentParser(description='A script with one argument')
    parser.add_argument('arg1', help='First argument')

    args     = parser.parse_args()
    fileName = args.arg1

    h5file  = oscar( fileName )
    h5file.saveAsVTU()

if __name__ == '__main__':
    main()
